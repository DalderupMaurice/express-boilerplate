{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "A Boilerplate application for building REST APIs using express, mongoose in ES6 with code coverage",
  "author": "Maurice Dalderup <Maurice_Dalderup@hotmail.com>",
  "license": "MIT",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": ">=8.11.0",
    "npm": ">=5.6.0",
    "yarn": ">=1.6.0"
  },
  "scripts": {
    "start": "gulp serve",
    "start:debug": "cross-env DEBUG=express-boilerplate:* yarn start",
    "lint": "esw *.js server config --color --fix",
    "lint:watch": "yarn lint -- --watch",
    "precommit": "lint-staged",
    "test": "cross-env NODE_ENV=test ./node_modules/.bin/mocha --ui bdd --reporter spec --colors server --recursive",
    "test:watch": "yarn test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --ui bdd --reporter spec --colors server --recursive",
    "test:check-coverage": "yarn test:coverage && istanbul check-coverage",
    "report-coverage": "coveralls < ./coverage/lcov.info"
  },
  "dependencies": {
    "bluebird": "3.7.2",
    "body-parser": "1.20.3",
    "compression": "1.8.0",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "debug": "4.4.0",
    "dotenv": "^16.0.0",
    "express": "4.21.2",
    "express-jwt": "8.5.1",
    "express-validation": "4.1.1",
    "express-winston": "4.2.0",
    "helmet": "8.0.0",
    "http-status": "2.1.0",
    "joi": "17.13.3",
    "jsonwebtoken": "9.0.2",
    "method-override": "^3.0.0",
    "mongoose": "8.10.1",
    "morgan": "1.10.0",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-function-bind": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-register": "6.26.0",
    "chai": "5.2.0",
    "coveralls": "3.1.1",
    "cross-env": "7.0.3",
    "del": "8.0.0",
    "eslint": "9.21.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-watch": "8.0.0",
    "gulp": "5.0.0",
    "gulp-babel": "8.0.0",
    "gulp-load-plugins": "2.0.8",
    "gulp-newer": "1.4.0",
    "gulp-nodemon": "2.5.0",
    "gulp-sourcemaps": "3.0.0",
    "husky": "9.1.7",
    "istanbul": "1.1.0-alpha.1",
    "lint-staged": "15.4.3",
    "mocha": "11.1.0",
    "prettier": "3.5.1",
    "run-sequence": "2.2.1",
    "supertest": "7.0.0",
    "supertest-as-promised": "4.0.2"
  },
  "lint-staged": {
    "*.{js,css}": ["yarn lint", "prettier --write", "git add"]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:DalderupMaurice/express-boilerplate.git"
  }
}
